@model IEnumerable<MyUniversity.Contracts.Models.EnrollmentModel>

@{
    ViewBag.Title = "Enrollments Details";
}

<h2>Details</h2>
<h4>Enrollment</h4>
<br />
<h4>@ViewBag.StudentFullName's Enrollment Details</h4>
@Html.ActionLink("Create", "Create", "Enrollments", new { studentId = ViewBag.StudentId }, null)

<table class="table">
    <tr>
        <th>
            Course Title
        </th>
        <th>
            Teacher
        </th>
        <th>
            Grade
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Course.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Teacher.Person.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mark)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id })
            </td>
        </tr>
    }

</table>
